{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://spooqs.space/docs/schemas/patch-file-schema.json",
	"type" : "object",
	"patternProperties" : {
		"$comment" : "All keys must be lower case alphanumeric starting with a letter - these a device names",
		"^[a-z][_a-z0-9-]*$" : {
			"type" : "object",
			"additionalProperties" : {
				"$comment" : "all properties are instrument types (category e.g. bass) and should be entered as
								will be displayed to the user.",
				"type" : "array",
				"items" : {
					"type" : "object",
					"properties" : {
						"name" : {
							"type" : "string",
							"required" : true,
						}
						"desc" : {
							"type" : "string",
							"required" : true,
						}
						"steps" : {
							"type" : "array",
							"required" : true,
							"minItems": 1,
							"maxItems": 8,
							"items" : {
								"type" : "object",
								"properties" : {
									"order" : {
										"type" : "integer"
									},
									"instruction" : {
										"type" : "string"
									}
								}
							}
						}
					}
				}
			}
		}
	},
	"additionalProperties": false
}